#include "robot-config.h"
 int axisHor =  Controller1.Axis3.position(percentUnits::pct);
 int axisVert = Controller1.Axis3.position(percentUnits::pct);
 int Rspeech = (axisHor-axisVert);//the horizontal value not sure which side is negative.
  int Lspeech = (axisHor+axisVert);          

void ruing()
 {

 RMotor.rotateFor(2.5,timeUnits::sec,Rspeech,velocityUnits::pct);
 LMotor.rotateFor(2.5,timeUnits::sec,Lspeech,velocityUnits::pct);
        }

int main() { 
   
       Controller1.Axis3.changed(ruing);
       Controller1.Axis4.changed(ruing);
           
    if(Controller1.Axis4.value()==0 and Controller1.Axis3.value()==0)
         {
             RMotor.stop();
             LMotor.stop();
         }
}
