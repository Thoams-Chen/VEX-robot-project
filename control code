#include "robot-config.h"
#include "math.h"

 int axisHor = Controller1.Axis3.value();
 int axisVert = Controller1.Axis4.value();
 int Rspeech = (axisHor+axisVert);//the horizontal value not sure which side is negative.
 int Lspeech = (axisHor-axisVert);          
 

int main() { 
    if(Rspeech<100 and Lspeech<100)
    {
  LMotor.spin(vex::directionType::fwd,Rspeech, vex::velocityUnits::pct); 
  RMotor.spin(vex::directionType::fwd,Lspeech, vex::velocityUnits::pct);
    }
   if(Rspeech>100 and Lspeech>100)
   {
  LMotor.spin(vex::directionType::fwd,Rspeech/2, vex::velocityUnits::pct); 
  RMotor.spin(vex::directionType::fwd,Lspeech/2, vex::velocityUnits::pct);
   }
